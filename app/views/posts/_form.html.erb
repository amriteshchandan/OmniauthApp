<%= simple_form_for(@post, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: {class: 'form-control'}, label: false, placeholder: "Title" %>
    <br />
    <%= f.input :content, input_html: {class: 'form-control'}, label: false, placeholder: "Add your post content here"  %>
    <br />
    <% if current_user.verify_permissions == 1 %>
    <%= f.input :post_on_facebook, label: "Post on fb" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
